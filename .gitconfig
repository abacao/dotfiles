  #signingkey = FB0103F1612FF2BD
[commit]
  gpgsign = true
[core]
	gpgsign = true
	editor = vim
	excludesfile = ~/.gitignore
	quotepath = false
[color]
	ui = true
	status = auto
	branch = auto
	interactive = auto
[merge]
	tool = vimdiff
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[alias]
#  b = branch
#  st = status -sb
#  ci = commit
#  co = checkout
#  up = checkout
#  d  = difftool
#  dp = diff --patience
#  dc = diff --cached
#  dcp = diff --cached --patience
  gl = log --graph --decorate --pretty=oneline --abbrev-commit --all
  hist = log --graph --decorate --pretty=format:'%h %Cred %ad %Cgreen %s%d %Cblue %an' --date=short --abbrev-commit --all
  info = config --get remote.origin.url
  unadd = reset HEAD
  uncommit = reset --soft HEAD~
  nuclear = !git fetch origin && git reset --hard origin/master
  cm = checkout master
[push]
	default = current
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[pull]
	default = current
	rebase = true
[init]
	templatedir = ~/.git-templates/
[cola]
	spellcheck = false
[pager]
	branch = false
