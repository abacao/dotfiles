  1) notify-send -u critical -t 3000 "SSID: $(iwconfig wlan0 | awk '{print $4}' | grep ESSID | cut -c 7-)" ;;
	2) pgrep -x dunst >/dev/null && notify-send "ğŸŒ Internet module" "\- Click to connect
ğŸ“¡: no wifi connection
ğŸ“¶: wifi connection with quality
â: no ethernet
ğŸŒ: ethernet working
" ;;
esac

[ "$(cat /sys/class/net/w*/operstate)" = 'down' ] && wifiicon="ğŸ“¡"

[ ! -n "${wifiicon+var}" ] && wifiicon=$(grep "^\s*w" /proc/net/wireless | awk '{ print "ğŸ“¶", int($3 * 100 / 70) "%" }')

printf "%s %s" "$wifiicon" "$(cat /sys/class/net/e*/operstate | grep up | sed "s/down/â/;s/up/ğŸŒ/")"

