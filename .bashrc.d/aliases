alias fzf='fzf -m'
alias cat='cat -v'
alias bat='bat --theme=TwoDark'
alias code='codium'
alias open='xdg-open'
alias l='exa -a -a --icons --group-directories-first -l -g --time-style long-iso'
alias ll='ls -lhaG'
